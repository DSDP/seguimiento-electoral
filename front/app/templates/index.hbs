{{#link-to 'login' class="btn-login"}} 
	<span>Iniciar sesión</span>
{{/link-to}}

{{#if (can 'view operator')}}
	{{#if session.user.teams}}
		{{#each session.user.teams as |team|}}
			{{#view 'operator' team=team schools=session.user.schools instances=session.user.instances}}
			<fieldset>
				<label>
					Escuela
					{{view "select"
				       content=session.user.schools
				       optionLabelPath='content.name'
				       selection=view.currentSchool
				       value=view.currentSchool
				       prompt='Selecciona una opcion'
				       multiple=false
				       }}
				</label>
			</fieldset>	
			{{#ivy-tabs class="main-tab"}}
				{{#ivy-tab-list class="nav-tab"}}
					{{#each view.configs as |config|}}
						{{#ivy-tab}}{{config.config.name}}{{/ivy-tab}}
					{{/each}}				
				{{/ivy-tab-list}}



				{{#each view.configs as |config|}}
					{{#ivy-tab-panel}}
						<div class="instance-container">
							{{#each config.instances as |instance|}}
								<div class="instance-item">
									<h2>{{instance.instance.name}}</h2>
									<div class="school-container">
										{{#each instance.schools as |school|}}
											<div class="school-item">
												<div class="school-data">
													<div class="school-name">
														<h3>{{school.school.name}}</h3>
													</div>

													<div class="school-referring -icon">
														<div class="school-meta">
															<div class="item adress">
																{{fa-icon 'map-marker'}} {{school.school.address}}
															</div>
															<div class="item referring">
																{{fa-icon 'user'}} {{school.school.referring.name}} {{school.school.referring.lastName}}
															</div>
															<div class="item telephone">
																{{fa-icon 'mobile'}} {{school.school.referring.telephone}}
															</div>
														</div>
													</div>
												</div>
												
												<div class="board-container">
													<div class="board-head">
														<div class="board">
															<h4>Mesas</h4>
														</div>
														<div class="candidate-container">
															{{#each config.config.candidates as |candidate|}}
																<h4>{{candidate.lastName}}</h4>
															{{/each}}	
														</div>
													</div>
													{{#each school.boards as |board|}}
														<div class="board-item">
															<div class="board">
																N°{{board.board.name}}
															</div>
															<div class="candidate-container">
																{{#each board.candidates as |candidate|}}
																	<div {{bind-attr class=":board-candidate candidate.candidate.name"}}>
																		{{input type='number' value=candidate.candivote.votes}}
																	</div>
																{{/each}}
															</div>
														</div>
													{{/each}}
												</div>
											</div>
										{{/each}}
									</div>
								</div>
							{{/each}}
						</div>
						{{#if view.isDirty}}
							<a {{action 'save' target="view" class="smart-save"}}>Guardar</a>
						{{/if}}
					{{/ivy-tab-panel}}
				{{/each}}
			{{/ivy-tabs}}	

			{{/view}}
		{{/each}}
	{{/if}}
{{/if}}


{{#if (can 'view viewer')}}
	{{#if session.user.teams}}
		{{#each session.user.teams as |team|}}
			{{#ivy-tabs}}
				{{#ivy-tab-list class="nav-tab"}}
					{{#each team.configs as |config|}}
						{{#ivy-tab}}{{config.name}}{{/ivy-tab}}
					{{/each}}				
				{{/ivy-tab-list}}

				{{#each team.configs as |config|}}
					{{#ivy-tab-panel}}
						<div class="instance-container">
							{{#each session.user.instances as |instance|}}
								<div class="instance-item">
									<div class="instance-meta">
										<div class="instance-candidate">
											{{#each config.candidates as |candidate|}}
												{{#view 'totalizer' candidate=candidate config=config instance=instance autoRefresh=controllers.application.autoRefresh}}
												<div {{bind-attr class=":item candidate.name"}}>
										            <div class="img-container">
													{{#if candidate.picture.url}}
										              <img {{bind-attr src=candidate.picture.url}}>
										             {{else}}
										             	{{#if candidate.force.logo.url}}
										              	<img {{bind-attr src=candidate.force.logo.url}}>
										              	{{else}}

										              	<img src="/assets/images/no-user-img.jpg" width="76px">
										              	 {{/if}}
										           {{/if}}
										             </div>



													 <div class="item-data">
													 	<h2>
													 		{{candidate.name}} {{candidate.lastName}}
													 		
												 		</h2>

													 	<div class="percent">
														 	{{view.votes.percent}}% <br>
														 </div>
														 <i>{{candidate.force.name}}</i>
														 <small>{{view.votes.total}} votos</small>
													 </div>
												</div>
												{{/view}}
											{{/each}}
										</div>			
									</div>
								</div>
							{{/each}}
						</div>
						{{#if view.isDirty}}
							<a {{action 'save' target="view"}}>Guardar</a>
						{{/if}}
					{{/ivy-tab-panel}}
				{{/each}}
			{{/ivy-tabs}}
		{{/each}}
	{{/if}}
{{/if}}


