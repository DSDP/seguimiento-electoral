</article>
<h1>Listado de cargos</h1>

<p>
  {{link-to "Crear nuevo cargo" "data-entry.charges.new" class="btn"}}
</p>

{{#if model.length}}
  <table class="table-minimal">
    <thead>
      <tr>
        <th>
          Nombre
        </th>
        <th colspan="3">
          Acciones
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each charge in model}}
        <tr>
          <td>
            {{charge.name}}
          </td>
          <td>
            {{link-to "Editar" "data-entry.charges.edit" charge}}
          </td>
          <td>
            <a href="#" {{action "remove" charge}}>Eliminar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="loading">
  {{loading-bubbles color='#0083ff' size=100}}
</div>
{{/if}}
