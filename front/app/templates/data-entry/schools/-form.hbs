<form {{action "save" on="submit"}} class="create-event">
<fieldset>
	<label>
		Pais
		{{model-selector modelName='country' value=country labelPath="name" sigle=true}}
	</label>
	{{#if country}}
	<label>
		Provincia
		{{model-selector modelName='province' value=province fieldFilter='country' valueFilter=country.id labelPath="name" sigle=true}}
	</label>		
	{{/if}}
	{{#if province}}
	<label>
		Distrito
		{{model-selector modelName='town' value=model.town fieldFilter='province' valueFilter=province.id labelPath="name" sigle=true}}
	</label>		
	{{/if}}	
	{{#if model.town}}
	<label>
		Barrio
		{{model-selector modelName='borough' value=model.borough fieldFilter='town' valueFilter=model.town.id labelPath="name" sigle=true}}
	</label>		
	{{/if}}

	<label>
		Referente
		{{model-finder modelName='referring' list=model.referring labelPath="name" sigle=true}}
	</label>		
</fieldset>	
  <div>
    <label>
      Nombre
      {{input type="text" value=model.name}}
    </label>
  </div>
  <div>
    <label>
      Direccion
      {{input type="text" value=model.address}}
    </label>
  </div>
  <div>
    <input type="submit" value="Guardar">
  </div>
</form>
