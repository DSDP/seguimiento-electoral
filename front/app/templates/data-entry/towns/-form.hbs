<form {{action "save" on="submit"}} class="create-event">
	<fieldset>
		<label>
			Pais
			{{model-selector modelName='country' value=country labelPath="name" sigle=true}}
		</label>
		{{#if country}}
		<label>
			Provincia
			{{model-selector modelName='province' value=model.province fieldFilter='country' valueFilter=country.id labelPath="name" sigle=true}}
		</label>		
		{{/if}}
	</fieldset>	
  <div>
    <label>
      Nombre
      {{input type="text" value=model.name}}
    </label>
  </div>
  <div>
    <input type="submit" value="Guardar">
  </div>
</form>
