</article>
<h1>Listado de equipos</h1>

<p>
  {{link-to "Crear nuevo Equipo" "admin.teams.new" }}
</p>

{{#if model.length}}
  <table class="table-minimal">
    <thead>
      <tr>
        <th>
          Nombre
        </th>
        <th colspan="3">
          Acciones
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each team in model}}
        <tr>
          <td>
            {{team.name}}
          </td>
          <td>
            {{link-to "Editar" "admin.teams.edit" team}}
          </td>
          <td>
            <a href="#" {{action "remove" team}}>Eliminar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="loading">
  {{loading-bubbles color='#0083ff' size=100}}
</div>
{{/if}}
