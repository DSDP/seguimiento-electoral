</article>
<h1>Listado de configuraciones</h1>


{{link-to "Crear nuevo configuracion" "admin.configs.new" class="btn"}}

{{#if model.length}}
  <table class="table-minimal">
    <thead>
      <tr>
        <th>
          Nombre
        </th>
        <th colspan="3">
          Acciones
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each config in model}}
        <tr>
          <td>
            {{config.name}}
          </td>
          <td>
            {{config.description}}
          </td>
          <td>
            {{link-to "Editar" "admin.configs.edit" config}}
          </td>
          <td>
            <a href="#" {{action "remove" config}}>Eliminar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="loading">
  {{loading-bubbles color='#0083ff' size=100}}
</div>
{{/if}}
