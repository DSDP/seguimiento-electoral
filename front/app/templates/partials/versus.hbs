{{#each session.user.instances as |instance|}}
	<div class="instance-item">
		<div class="instance-meta">											
			{{#view 'totalizer' candidate=candidate config=config instance=instance autoRefresh=controllers.application.autoRefresh}}
				<h3 class="vote-head">
					<span class="pull-left"> Mesas escrutadas: {{view.boardsCompletedPercent}} % ({{view.meta.completed}} / {{view.meta.total}})</span>
					
					<span>Voto FPV: {{view.votosFPV}}%</span>

					<span class="pull-right">Ultima actualización {{time-ago-in-words view.lastUpdated}}</span>
				</h3>
				
				<div class="instance-candidate">
					{{#each view.candidates as |candidate|}}
						<div {{bind-attr class=":item candidate.candidate.name"}}>
				            <div class="img-container">
								{{#if candidate.candidate.picture.url}}
					            	<img {{bind-attr src=candidate.candidate.picture.url}}>
					            {{else}}
					             	{{#if candidate.candidate.force.logo.url}}
						              	<img {{bind-attr src=candidate.candidate.force.logo.url}}>
					              	{{else}}
						              	<img src="/assets/images/no-user-img.jpg" width="76px">
					              	{{/if}}
					           {{/if}}
				            </div>
						    <div class="item-data">
							 	<h2>
							 		{{candidate.candidate.name}} {{candidate.candidate.lastName}}
						 		</h2>
							 	<div class="percent">
								 	{{candidate.percent}}%
								 	<small>{{candidate.votes}} votos</small>
								</div>
								<i>{{candidate.candidate.force.name}}</i>
								<small>Porcentaje total {{candidate.totalPercent}} %</small>
							</div>
						</div>
					{{/each}}
					{{progress-bar candidateId=2 candidates=view.candidates}}
				</div>
				<div class="boroughs-list">
					<div class="boroughs-item -head">
						<div class="name">Barrio</div>
						{{#each view.candidates as |candidate|}}
							<div {{bind-attr class=":votes candidate.candidate.name"}}>
								{{candidate.candidate.lastName}}
							</div>
						{{/each}}
					</div>
					{{#each view.boroughs as |borough|}}
						<div class="boroughs-item">
							<div class="name">{{borough.borough.name}}</div>
							<div class="candidate-progress">
								{{#each borough.candidates as |candidate|}}
									<div {{bind-attr class=":votes candidate.candidate.name"}}>
										{{candidate.percent}}%
										<span>({{candidate.votes}} votos)</span>
									</div>
								{{/each}}
								{{progress-bar candidateId=2 candidates=borough.candidates}}
							</div>
						</div>
					{{/each}}
				</div>	
				<div class="last-boards">
					<h3>Últimas mesas cargadas</h3>
					{{#each view.lastBoards as |board|}}
						<div class="board-item">
							<div class="board">
								<span><b>Mesa {{board.board.name}}</b> | {{board.board.school.name}}</span>

								<span class="pull-right">{{board.board.school.borough.name}}</span>
							</div>
							<div class="candidate-container">
							{{#each board.candidates as |candidate|}}
								<div {{bind-attr class=":candidate-item candidate.candidate.name"}}>
									<div class="name">{{candidate.candidate.name}} {{candidate.candidate.lastName}}</div>
									<div class="votes">{{candidate.percent}}% <br> <span>{{candidate.votes}} votos</span></div>
								</div>
							{{/each}}
							</div>
							
						</div>
					{{/each}}
				</div>
			{{/view}}
		</div>
	</div>
{{/each}}